{
    "name": "ticktock-js",
    "version": "4.0.0",
    "description": "TickTock is a timekeeping library for animating and adding interactions to digital watch designs.",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "node esbuild.config.js && tsc",
        "lint": "eslint",
        "lint:fix": "yarn lint -- --fix",
        "prettier": "prettier ./ --check",
        "prettier:fix": "yarn prettier -- --write",
        "format": "yarn prettier:fix && yarn lint:fix"
    },
    "author": "Daniel Yuschick <daniel.yuschick@gmail.com>",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yuschick/TickTock.git"
    },
    "bugs": {
        "url": "https://github.com/yuschick/TickTock/issues"
    },
    "homepage": "https://github.com/yuschick/TickTock",
    "keywords": [
        "ticktock",
        "svg",
        "animation",
        "ticktock-js",
        "watchmaking"
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "esbuild": "^0.14.49",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "prettier-eslint": "^15.0.1",
        "prettier-eslint-cli": "^6.0.1",
        "typescript": "^4.7.4"
    },
    "dependencies": {}
}
